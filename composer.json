{
    "name": "terminal42/loupe",
    "description": "A full text search engine with tokenization, stemming, typo tolerance, filters and geo support based on only PHP and SQlite",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Terminal42\\Loupe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Terminal42\\Loupe\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Yanick Witschi",
            "email": "yanick.witschi@terminal42.ch"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "doctrine/dbal": "^3.5",
        "symfony/config": "^6.2",
        "patrickschur/language-detection": "^5.2",
        "wamania/php-stemmer": "^3.0",
        "doctrine/lexer": "^3.0",
        "voku/portable-utf8": "^6.0",
        "mjaschen/phpgeo": "^4.2",
        "toflar/state-set-index": "@dev"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.2",
        "phpunit/phpunit": "^9.5",
        "symfony/filesystem": "^6.2",
        "symplify/easy-coding-standard": "11.2.4.72",
        "symfony/finder": "^6.2"
    },
    "scripts": {
        "unit-tests": "@php vendor/bin/phpunit --testsuite=unit",
        "functional-tests": "@php vendor/bin/phpunit --testsuite=functional",
        "performance-tests": "@php vendor/bin/phpunit --testsuite=performance",
        "cs-fixer": "@php vendor/bin/ecs check --fix"
    }
}
